echo "\n==== Original stuff again ===="
cd ..
check_equals "$var_1" "ORIGINAL VAR"
check_equals "$(alias_1)" "ORIGINAL ALIAS"
check_equals "$(function_1)" "ORIGINAL FUNCTION"
