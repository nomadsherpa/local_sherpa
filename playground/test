source start

check_equals() {
  if [ "$1" != "$2" ]; then
    echo "NOT OK | Expected '$2', got '$1'"
  else
    echo "OK"
  fi
}


echo "==== Original stuff ===="
check_equals "$var_1" "ORIGINAL VAR"
check_equals "$(alias_1)" "ORIGINAL ALIAS"
check_equals "$(function_1)" "ORIGINAL FUNCTION"

echo "\n==== Project 1 ===="
cd project_1
check_equals "$var_1" "VAR PROJECT 1"
check_equals "$(alias_1)" "ALIAS PROJECT 1"
check_equals "$(function_1)" "FUNCTION PROJECT 1"

